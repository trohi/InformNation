<div  id="form-sign-in">
      {{#if hasError}}
        <div class="alert alert-danger mb-n5" style="width: 40%; margin:auto">
            {{#each messages}}
                <p  style="margin-left: 40%; font-size:18px;">{{this}}</p>
             {{/each}}
        </div>
    {{/if}}
<form class="form rounded-lg" action="/user/signin" method="POST" autocomplete="off">
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password">
    </div>
    <div class="form-row mt-4">
       <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <button type="submit" class="btn btn-info ml-1"  style="background-color:orange; color:black"><i class="fa fa-sign-in mr-1 ml-n1" style="color:black"></i>   Login</button>
        <hr>
     <a href="/user/signup" class="mt-3 mr-1">Make free account</a>
    </div>
</form>
</div>   